    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Title:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Başlık)
        </dd>

        <dt>
            @Html.DisplayName("Comment:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Acıklama)
